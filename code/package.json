{
  "name": "link",
  "icon": "view/clover.png",
  "displayName": "link",
  "description": "Link Text Syntax Highlighter",
  "version": "1.0.9",
  "license" : "Apache 2.0",
  "publisher": "teamtreesurf",
  "repository": {
    "type": "git",
    "url": "https://github.com/teamtreesurf/link.git"
  },
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./client/out/extension",
  "contributes": {
    "iconThemes": [
      {
        "id": "link",
        "label": "Link",
        "path": "./view/view.json"
      }
    ],
    "configurationDefaults": {
      "[link]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
          "other": false,
          "comments": false,
          "strings": false
        },
        "editor.tabCompletion": "on",
        "editor.wordSeparators": " ()<>{},?/",
        "editor.bracketPairColorization.enabled": false
      }
    },
    "languages": [{
      "id": "link",
      "aliases": ["Link", "link"],
      "extensions": [".link"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "link",
      "scopeName": "source.link",
      "path": "./syntaxes/link.tmLanguage.json"
    }]
  },
  "scripts": {
    "compile": "tsc -b",
		"watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
	"devDependencies": {
		"@types/node": "^16.11.7",
		"typescript": "^4.8.4"
	}
}
