{
  "name": "link",
  "displayName": "link",
  "description": "Link Text Syntax Highlighter",
  "version": "1.0.0",
  "license" : "Apache 2.0",
  "publisher": "drumworkteam",
  "repository": {
    "type": "git",
    "url": "https://github.com/drumworkteam/link.git"
  },
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "configurationDefaults": {
      "[link]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false
      }
    },
    "languages": [{
      "id": "link",
      "aliases": ["Link", "link"],
      "extensions": [".link"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "link",
      "scopeName": "source.link",
      "path": "./syntaxes/link.tmLanguage.json"
    }]
  }
}
